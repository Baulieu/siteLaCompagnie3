{% extends 'LcbVitrineBundle::layout.html.twig' %}

{% block body %}
    <div class="well">
        <form method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.prenom, "Prénom") }}
                {{ form_errors(form.prenom) }}
                {#{ form_widget(form.prenom) }#}
                <input type="text" name="prenom" class="form-control" placeholder="Votre prénom" required>
            </div>

            <div class="form-group">
                {{ form_label(form.nom, "Nom") }}
                {{ form_errors(form.nom) }}
                {#{ form_widget(form.nom) }#}
                <input type="text" name="nom" class="form-control" placeholder="Votre nom" required>
            </div>

            <div class="form-group">
                {{ form_label(form.date, "date") }}
                {{ form_errors(form.date) }}
                {#{ form_widget(form.date) }#}
                <input type="date" name="date" class="form-control" placeholder="Date" required>
            </div>

            <div class="form-group">
                {{ form_label(form.mail, "Adresse mail") }}
                {{ form_errors(form.mail) }}
                {#{ form_widget(form.mail) }#}
                <input type="email" name="mail" class="form-control" placeholder="Votre mail" required>
            </div>

            <div class="form-group">
                {{ form_label(form.text, "Votre message") }}
                {{ form_errors(form.text) }}
                <input type="text" name="text" class="form-control" placeholder="Votre message" required>
            </div>

            {#{ form_widget(form) }#}
            <input type="submit" class="btn btn-primary">
        </form>
    </div>
{% endblock %}